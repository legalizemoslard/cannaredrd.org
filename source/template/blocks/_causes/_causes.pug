// causes start

section#causes.section.causes

	img.causes__bg(src="img/causes_img.png", alt="img")

	.container
		.row.align-items-end

			.col-xl-5

				.heading.heading--primary
					span.heading__pre-title Nuestras causas
					h2.heading__title #[span RedCannabica] #[span Causas]
					p RedCannabica apoya proyectos comunitarios que busquen contribuir con nuestro compromiso de legalizar el cannabis en el país

			.col-xl-6.offset-xl-1.d-none.d-xl-block

				.row.offset-margin

					.col-6

						.counter-item.counter-item--style-3
							.counter-item__top
								h6.counter-item__title Personas a las que ayudamos
							.counter-item__lower
								span.js-counter 0
								span k

					.col-6

						.counter-item.counter-item--style-3
							.counter-item__top
								h6.counter-item__title Donaciones recaudadas
							.counter-item__lower
								span.js-counter 0
								span $

		.row.align-items-end.margin-bottom

			.col-sm-6

				a.button.button--primary(href="http://redcannabica.info/es-ES/initiatives" target="_blank") More Causes

			.col-sm-6.d-flex.justify-content-sm-end

				// slider nav start
				.slider__nav.causes-slider__nav
					.slider__arrows
						.slider__prev
							+fa('chevron-left')
						.slider__next
							+fa('chevron-right')
				// slider nav end

	.causes-holder.offset-margin

		.causes-holder__wrapper

			.causes-slider.offset-margin

				.causes-slider__item

					.causes-item.causes-item--primary
						.causes-item__body
							.causes-item__top
								h6.causes-item__title 
									a(href="#") Dona a RedCannabica
								p Este fondo fue creado para apoyar iniciativas comunitarias, cubrir gastos de gestión y compensar nuestros voluntarios
							.causes-item__img
								.causes-item__badge(style="background-color: #49C2DF") Community
								img.img--bg(src="img/blog_1.png", alt="img")
							.causes-item__lower
								.progress-bar
									.progress-bar__inner(style="width: 0%;")
										.progress-bar__value 0%
								.causes-item__details-holder
									.causes-item__details-item
										span Goal: 
										span -$
									.causes-item__details-item.text-right
										span Pledged: 
										span all
				
						a.button.causes-item__button.button--primary(href='https://www.patreon.com/redcannabicard', target="_blank") + Apoyanos

// causes end